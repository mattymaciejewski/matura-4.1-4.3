#include <iostream>
#include <cmath>
#include <fstream>  
using namespace std;
const double PI = 3.141592653589793;


void get_coordinates(double t, double v, double omega, double &x, double &y) {
    double r = v * t; 
    x = r * sin(omega * t);  
    y = r * cos(omega * t);  
}


double distance(double x1, double y1, double x2, double y2) {
    return sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));  
}

int main() {
    
    double T = 10;          
    double v = 1;           
    double dt = 0.5;        
    double t_max = 10;      
    double omega = 2 * PI / T;  

    
    ofstream file("wyniki.txt");  
    if (!file.is_open()) {
        cerr << "Nie można otworzyć pliku do zapisu!" << endl;
        return 1;
    }

    
    file << "Czas (s)\tX\tY\tOdleglosc sumaryczna\n";

    
    double total_distance = 0.0;
    double t = 0.0;

    
    double x_prev, y_prev, x, y;
    get_coordinates(t, v, omega, x_prev, y_prev);  

    
    file << t << "\t" << x_prev << "\t" << y_prev << "\t" << total_distance << "\n";

    
    while (t <= t_max) {
        t += dt;  
        get_coordinates(t, v, omega, x, y);

        
        double dist = distance(x_prev, y_prev, x, y);
        total_distance += dist;  

        
        file << t << "\t" << x << "\t" << y << "\t" << total_distance << "\n";

        
        x_prev = x;
        y_prev = y;
    }

    
    file.close();

    
    cout << "Sumaryczna długość toru mrówki: " << total_distance << endl;

    return 0;
}
